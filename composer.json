{
    "autoload": {
            "psr-0": {
            "Stores": "app/classes/",
            "Transvision": "app/classes/",
            "Langchecker": "app/classes/"
        },
        "files": ["app/helpers/debug.php"]
    },

    "config": {
        "component-dir": "web/media/assets"
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/pascalchevrel/Verif/"
        }
    ],

    "require": {
        "monolog/monolog" : "~1.1",
        "components/jquery": "~1.1",
        "components/bootstrap": "~3.3",
        "components/bootstrap-default": "~3.2",
        "robloach/component-installer": "*"
    },

    "require-dev": {
        "atoum/atoum" : "~2.0",
        "symfony/var-dumper": "~2.6",
        "fabpot/php-cs-fixer": "~1.4",
        "pchevrel/verif": "dev-master"

    }
}
